{
  "manifest_version": 2,

  "name": "Reminder",
  "description": "一款基于Chrome的消息提醒插件",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://localhost/*"
  ],
  "content_security_policy": "script-src 'self' http://localhost:1235; object-src 'self'"
}
